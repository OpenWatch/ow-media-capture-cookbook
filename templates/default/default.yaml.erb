# Generated by Chef for <%= node[:fqdn] %>

MediaCapture:

  #Local information
  incomingTmp: <%= @incoming_tmp %>
  tempBucket: <%= @temp_bucket %>
  tempRejectBucket: <%= @temp_reject_bucket %>
  siteDomain: <%= @site_domain %>
  port: <%= @app_port %>

  # Database
  tableName: <%= @couch_table_name %>


MediaProcess:

  # To 'process'
  # POST with json:
  # :uuid

  # Media Processing Server
  #    Turned into: api_schema + api_url
  api_schema: <%= @process_api_schema %>
  api_url: <%= @process_api_url %>

Django:

  # OpenWatch API
  #    Turned into: api_schema + api_user + ':' + api_password + '@' + api_url
  api_schema: <%= @django_api_schema %>
  api_user: <%= @django_api_user %>
  api_password: <%= @django_api_password %>
  api_url: <%= @django_api_url %>

